# Matrix Google Play Bridge - Environment Variables
# Copy this file to .env and modify the values for your environment

# =============================================================================
# Project Configuration
# =============================================================================
COMPOSE_PROJECT_NAME=matrix-googleplay-bridge
NODE_ENV=development
BUILD_TARGET=development
CONFIG_PATH=/app/config/config.yaml

# Node.js and Docker versions
NODE_VERSION=18.20.4
ALPINE_VERSION=3.19

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=postgres
DB_HOST_PORT=5432
DB_NAME=matrix_googleplay_bridge
DB_USER=bridge_user
DB_PASSWORD=your_secure_db_password_here
DB_SSL=false

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_HOST_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# Matrix Configuration
# =============================================================================
MATRIX_HOMESERVER_URL=https://matrix.your-domain.com
MATRIX_DOMAIN=your-domain.com
MATRIX_AS_TOKEN=your_application_service_token_here
MATRIX_HS_TOKEN=your_homeserver_token_here

# =============================================================================
# Google Play Configuration
# =============================================================================
GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/service-account-key.json
GOOGLE_PLAY_PACKAGE_NAME=com.yourcompany.yourapp

# =============================================================================
# Bridge Configuration
# =============================================================================
BRIDGE_ADMINS=@admin:your-domain.com,@support:your-domain.com
BRIDGE_PORT=8080
MONITORING_PORT=9090

# =============================================================================
# Security and Monitoring
# =============================================================================
MONITORING_ENABLED=true
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Nginx Configuration
# =============================================================================
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# Development Tools (Development Environment Only)
# =============================================================================
ADMINER_PORT=8081
REDIS_COMMANDER_PORT=8082
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# =============================================================================
# SSL and Security (Production)
# =============================================================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/private.key
SSL_CERTIFICATE_CHAIN_PATH=/etc/nginx/ssl/chain.pem

# =============================================================================
# Backup Configuration (Production)
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# =============================================================================
# External Services (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration for alerts
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your_email_password_here
SMTP_FROM=matrix-bridge@your-domain.com

# =============================================================================
# Performance Tuning
# =============================================================================
# Memory limits (in MB)
BRIDGE_MEMORY_LIMIT=512
POSTGRES_MEMORY_LIMIT=256
REDIS_MEMORY_LIMIT=128
NGINX_MEMORY_LIMIT=128

# CPU limits (as decimal)
BRIDGE_CPU_LIMIT=0.5
POSTGRES_CPU_LIMIT=0.25
REDIS_CPU_LIMIT=0.1
NGINX_CPU_LIMIT=0.1